<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/style_color_primary</item>
        <item name="colorPrimaryDark">@color/style_color_primary_dark</item>
        <item name="colorAccent">@color/style_color_accent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 滑动返回需要 -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="actionBarStyle">@style/Widget.ActionBar</item>
        <item name="actionButtonStyle">@style/Widget.ActionBar.Button</item>
        <item name="actionOverflowButtonStyle">@style/Widget.ActionBar.OverFlow</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/toolbar_bg</item>
        <item name="actionModeSplitBackground">@color/toolbar_bg</item>
        <item name="popupMenuStyle">@style/Circle_Pop</item>
        <item name="actionMenuTextAppearance">@style/MenuTextStyle</item>
        <!-- 进度条默认的样式-->
    </style>

    <style name="ZjbAppTheme" parent="@style/AppBaseTheme"/>

    <style name="AppTheme.NoTranslucent.NoSwipe" parent="@style/ZjbAppTheme">
        <item name="android:windowIsTranslucent">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="AppTheme.NoTranslucent.NoSwipe"/>

    <style name="MenuTextStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="PreferencePannel"></style>


</resources>
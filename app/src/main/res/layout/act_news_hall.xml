<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_main"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="39.0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="25.0dp"
            android:layout_marginRight="25.0dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:background="@drawable/news_hall_header_bg"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:text="@string/news_hall_title"
                    android:textColor="@color/text_color_white"
                    android:textSize="18.0sp" />

                <TextView
                    android:id="@+id/how_to_use"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:drawablePadding="6.0dp"
                    android:drawableRight="@drawable/news_hall_help"
                    android:paddingBottom="6.0dp"
                    android:paddingTop="6.0dp"
                    android:text="@string/how_to_use"
                    android:textColor="@color/text_color_white"
                    android:textSize="12.0sp" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/text_color_white"
                android:orientation="vertical"
                android:paddingBottom="20.0dp"
                android:paddingLeft="15.0dp"
                android:paddingRight="15.0dp">

                <TextView
                    android:id="@+id/news_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="29.0dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/black"
                    android:textSize="17.0sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2.0px"
                    android:layout_marginTop="10.0dp"
                    android:background="@color/v_divider_line_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20.0dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/news_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#8e8b89"
                        android:textSize="11.0sp" />

                    <LinearLayout
                        android:id="@+id/tags_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12.0dp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/news_tags_bg"
                            android:paddingBottom="3.0dp"
                            android:paddingLeft="6.0dp"
                            android:paddingRight="6.0dp"
                            android:paddingTop="3.0dp"
                            android:text="学车"
                            android:textColor="@color/black"
                            android:textSize="11.0sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="9.0dp"
                            android:background="@drawable/news_tags_bg"
                            android:paddingBottom="3.0dp"
                            android:paddingLeft="6.0dp"
                            android:paddingRight="6.0dp"
                            android:paddingTop="3.0dp"
                            android:text="学车"
                            android:textColor="@color/black"
                            android:textSize="11.0sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="9.0dp"
                            android:background="@drawable/news_tags_bg"
                            android:paddingBottom="3.0dp"
                            android:paddingLeft="6.0dp"
                            android:paddingRight="6.0dp"
                            android:paddingTop="3.0dp"
                            android:text="学车"
                            android:textColor="@color/black"
                            android:textSize="11.0sp" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/news_short_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25.0dp"
                    android:ellipsize="end"
                    android:maxLines="5"
                    android:textColor="#767472"
                    android:textSize="14.0sp" />

                <TextView
                    android:id="@+id/view_news"
                    android:layout_width="150.0dp"
                    android:layout_height="40.0dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="32.0dp"
                    android:background="@drawable/btn_inf_change"
                    android:gravity="center"
                    android:text="@string/views_adv"
                    android:textColor="@color/inquiry_text_selector"
                    android:textSize="15.0sp" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_share"
            android:layout_width="match_parent"
            android:layout_height="44.0dp"
            android:layout_marginLeft="60.0dp"
            android:layout_marginRight="60.0dp"
            android:layout_marginTop="30.0dp"
            android:background="@drawable/btn_withdraw"
            android:text="@string/share"
            android:textColor="@color/text_color_white"
            android:textSize="16.0sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13.0dp"
            android:src="@drawable/news_bottom_banner" />
    </LinearLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/share_menu_bg">

    <LinearLayout
        android:id="@+id/share_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#e7e4e2"
        android:orientation="vertical"
        android:visibility="invisible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:id="@+id/share_title"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                android:text="@string/share_to"
                android:textColor="#2e2e2e"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/share_subject"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:gravity="center_vertical"
                android:text="@string/share_subject"
                android:textColor="#888888"
                android:textSize="11.0sp" />
        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@android:color/transparent"
            android:divider="@android:color/transparent"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/share_weixin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5.0dp"
                    android:drawableTop="@drawable/logo_weixin"
                    android:gravity="center"
                    android:text="@string/wx_friends"
                    android:textColor="@color/black_87" />

                <TextView
                    android:id="@+id/share_timeline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50.0dp"
                    android:drawablePadding="5.0dp"
                    android:drawableTop="@drawable/logo_timeline"
                    android:gravity="center"
                    android:text="@string/wx_timeline"
                    android:textColor="@color/black_87" />

                <TextView
                    android:id="@+id/share_qzone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50.0dp"
                    android:drawablePadding="5.0dp"
                    android:drawableTop="@drawable/logo_qzone"
                    android:gravity="center"
                    android:text="@string/qq"
                    android:textColor="@color/black_87" />
            </LinearLayout>
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black_87" />

        <TextView
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/black_87"
            android:textSize="15.0sp" />
    </LinearLayout>
</RelativeLayout>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_main"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="115.0dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/invite_logo" />

            <TextView
                android:id="@+id/location1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8.0dp"
                android:gravity="center_horizontal"
                android:text="@string/invite_illustrate"
                android:textColor="#9e9d9c"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginLeft="40.0dp"
                android:layout_marginRight="40.0dp"
                android:layout_marginTop="45.0dp"
                android:background="@drawable/invite_edit_bg"
                android:orientation="horizontal"
                android:padding="1.0dp">

                <TextView
                    android:layout_width="56.0dp"
                    android:layout_height="match_parent"
                    android:background="#f8f4ef"
                    android:gravity="center"
                    android:text="@string/invite_code"
                    android:textColor="@color/themes_main"
                    android:textSize="14.0sp" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/v_divider_line_color" />

                <EditText
                    android:id="@+id/invite_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:gravity="center_vertical"
                    android:hint="@string/input_invite_code"
                    android:paddingLeft="10.0dp"
                    android:singleLine="true"
                    android:textColorHint="#bcbcbc"
                    android:textSize="14.0sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="55.0dp"
            android:layout_gravity="top"
            android:background="@color/themes_main"
            android:gravity="center"
            android:text="@string/invite_code"
            android:textColor="@color/text_color_white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/invite_btn"
            android:layout_width="match_parent"
            android:layout_height="44.0dp"
            android:layout_gravity="bottom"
            android:background="@color/themes_main"
            android:gravity="center"
            android:text="@string/filled_out"
            android:textColor="@color/text_color_white"
            android:textSize="18sp" />
    </FrameLayout>
</ScrollView>
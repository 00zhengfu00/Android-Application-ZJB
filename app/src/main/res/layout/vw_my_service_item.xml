<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50.0dp"
    android:background="@color/text_color_white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/left_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_learn_to_drive" />

    <TextView
        android:id="@+id/service_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10.0dp"
        android:layout_toRightOf="@+id/left_image"
        android:text="防爆险"
        android:textColor="@color/black"
        android:textSize="15.0sp" />

    <TextView
        android:id="@+id/service_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="11.0dp"
        android:layout_toRightOf="@+id/service_name"
        android:text="专业汽车教练员"
        android:textColor="#959391"
        android:textSize="13.0sp" />

    <ImageView
        android:id="@+id/right_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/service_enable" />

    <View
        android:id="@+id/h_divider_line"
        android:layout_width="match_parent"
        android:layout_height="1.0px"
        android:layout_alignParentBottom="true"
        android:background="@color/h_divider_line_color" />

</RelativeLayout>
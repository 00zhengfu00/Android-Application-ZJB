<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="35.0dp"
        android:background="@color/text_color_white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15.0dp"
            android:layout_marginRight="15.0dp"
            android:text="工具类"
            android:textColor="#adadad"
            android:textSize="14.0sp" />
    </FrameLayout>

    <com.idrv.coach.ui.view.DiscoverGirdLayout
        android:id="@+id/grid_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4.0dp"
        android:layout_marginRight="4.0dp"
        android:background="@color/text_color_white"
        app:item_count="1"
        app:item_drawable="@drawable/list_item_bg"
        app:item_margin="0.0dp"
        app:item_row_view_count="4"
        app:item_text_color="@color/black" />

    <View
        android:id="@+id/bottom_view"
        android:layout_width="match_parent"
        android:layout_height="35.0dp"
        android:background="@color/bg_main" />
</LinearLayout>
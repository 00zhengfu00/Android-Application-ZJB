<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:paddingBottom="20.0dp"
        android:paddingLeft="15.0dp"
        android:paddingRight="15.0dp"
        android:paddingTop="18.0dp">


        <ImageView
            android:id="@+id/avatar"
            android:layout_width="40.0dp"
            android:layout_height="40.0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/album_cover_default" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11.0dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nick_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:maxWidth="150.0dp"
                    android:singleLine="true"
                    android:text="曾呼呼"
                    android:textColor="@color/black"
                    android:textSize="13.0sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/image_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10.0dp"
                    android:layout_toRightOf="@+id/nick_name" />

                <TextView
                    android:id="@+id/delete_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8.0dp"
                    android:padding="8.0dp"
                    android:text="@string/delete"
                    android:textColor="#b5b5b5"
                    android:textSize="11.0sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dp"
                android:text="这个教练真心不错哦,不信你就来试一试"
                android:textColor="#292725"
                android:textSize="13.0sp" />

            <FrameLayout
                android:id="@+id/contact_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6.0dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/call_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/icon_comment_call"
                        android:drawablePadding="5.0dp"
                        android:paddingBottom="5.0dp"
                        android:paddingTop="5.0dp"
                        android:text="@string/contact_by_phone"
                        android:textColor="@color/themes_main"
                        android:textSize="11.0sp" />

                    <TextView
                        android:id="@+id/message_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="11.0dp"
                        android:drawableLeft="@drawable/icon_comment_message"
                        android:drawablePadding="5.0dp"
                        android:paddingBottom="5.0dp"
                        android:paddingTop="5.0dp"
                        android:text="@string/contact_by_message"
                        android:textColor="@color/themes_main"
                        android:textSize="11.0sp" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="bottom"
        android:layout_marginLeft="15.0dp"
        android:background="@color/h_divider_line_color" />
</FrameLayout>
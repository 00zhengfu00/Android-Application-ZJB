<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main"
    tools:context="com.idrv.coach.ui.TeamNameActivity">

    <com.idrv.coach.ui.widget.ClearEditText
        android:id="@+id/team_name_et"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginTop="17dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:hint="@string/myteam_item_teamname"
        android:textColorHint="#bbb"
        android:maxLength="15"
        android:singleLine="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="#2b2b2b"
        android:textSize="14sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/team_name_et"
        android:background="@color/h_divider_line_color"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="17dp"
        android:background="@color/h_divider_line_color"/>

    <TextView
        android:id="@+id/team_leftNumber_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/team_name_et"
        android:layout_marginRight="20dp"
        android:layout_marginTop="6dp"
        android:text="15"
        android:textColor="#888"
        android:textSize="11sp"/>

</RelativeLayout>
